<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:maui_app.Pages"
             x:Class="maui_app.MainPage">
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection Title="Menu">
                <TextCell Text="Inline data template"
                          Detail="Inline data template"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:InlineDataTemplatePage}" />
                <TextCell Text="Data template selector"
                          Detail="Data template selector"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:DataTemplateSelectorPage}" />
                <TextCell Text="People"
                          Detail="People"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:PeoplePage}" />
                <TextCell Text="Notes"
                          Detail="Notes"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:NotesPage}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>
